<div class='display-4 p-1 text-center font-weight-bold pl-3 text-uppercase text-white' style='font-family: serif;'>
    User Profile
</div>

{{#if currentUser}}

	<table class="table table-dark rounded border border-light mx-auto m-2" style='width: 400px'>
	  <tbody>
	    
	    <tr class='table-light'>
	      <td class='text-dark font-weight-bold pl-3'>Name</td>
	      <td class='text-dark text-right pr-3 '>{{currentUser.firstName}}</td>
	    </tr>
	   
	    <tr class='table-dark'>
	      <td class='text-dark font-weight-bold pl-3'>Surname</td>
	      <td class='text-dark text-right pr-3'>{{currentUser.lastName}}</td>
	    </tr>    
	    <tr class='table-dark'>
	      <td class='text-dark font-weight-bold pl-3'>Username</td>
	      <td class='text-dark text-right pr-3'>{{currentUser.username}}</td>
	    </tr>
	    <tr class='table-dark'>
		    <td class='text-dark font-weight-bold pl-3'>Status</td>
		    <td class='text-dark text-right pr-3'>{{#if currentUser.admin}}
					Admin
				{{else}}
				  {{#if currentUser.member}}
				    Member
				  {{else}}
				  	Visitor with an ID
				  {{/if}}
				{{/if}}
			</td>
	    </tr>

	  </tbody>
	</table>

	<div class='user-posts text-center' id='posts'>
		{{#if post}}
		   {{#each post}}
		    <div class="card border-dark m-3" style="width: 30rem; display: inline-block;">

		        <div class="card-header bg-transparent border-dark text-left">
		        	<p class="card-text">Me</p>
		        </div>

		        <div class="card-body text-dark text-left" style='height: 8rem; overflow: auto;'>
		            <h5 class="card-title font-weight-bold">{{ title }}</h5>
		            <p class="card-text">{{{content }}}</p>
		        </div>

		        <div class="card-footer bg-transparent border-dark text-right">
		            {{ dateCreated }}
		        </div>

		        <div class='text-center'><hr> <a class='pl-1 text-danger font-weight-bold pl-3' href="/{{id}}/delete" data-toggle="tooltip" data-placement="left" title="Delete">DELETE</a></div>
		    </div>
		   {{/each}}
		{{else}}

		<div class='dispay-5 p-3 text-center font-weight-bold text-white'>
		    You have posted nothing in the club yet!
		    <button class="btn btn-outline-light d-inline m-2"><a class='font-bold' href='/new-post'>Write a post</a> </button>
		</div>
		{{/if}}
	</div>

{{else}}

<div class='dispay-5 p-3 text-center font-weight-bold pl-3 text-white'>
    You need to be logged in!<br>
    <button class="btn btn-outline-light d-inline m-2"><a class='font-bold' href='/login'>Log-in</a> </button> or
    <button class="btn btn-outline-light d-inline m-2"><a class='font-bold' href='/signup'>Sign-up</a> </button>
</div>

{{/if}}