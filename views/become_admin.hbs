<div class='display-4 p-1 text-center font-weight-bold text-uppercase text-white' style='font-family: serif;'>
    {{title}}
</div>

{{#if currentUser}} {{#if currentUser.admin}}
<div class='dispay-5 p-3 text-center font-weight-bold text-white'>
    You'are already an admin :D
</div>
{{else}}
<div class='rounded border border-light mx-auto p-2 m-2' style='width:500px'>
    <form class='container' method='POST'>
        <div class='form-group text-center p-2'>
            <label for='password' class='font-weight-bold text-white text-uppercase'>Admin password :</label>
            <input type='password' id='password' name='password' class='form-control'>
        </div>

        <div class='form-group d-flex justify-content-center text-center'>
            <button type 'submit' class='btn btn-outline-light'>Submit!</button>
        </div>
    </form>
</div>
{{/if}} {{else}}
<div class='dispay-5 p-3 text-center font-weight-bold text-white'>
    You need to be logged in to become an admin!<br>
    <button class="btn btn-outline-light d-inline m-2"><a class='font-bold' href='/login'>Log-in</a> </button> or
    <button class="btn btn-outline-light d-inline m-2"><a class='font-bold' href='/signup'>Sign-up</a> </button>
</div>
{{/if}}

<div class='mx-auto p-2 m-2 text-white' style='width:500px'>
    {{#if errors}}
    <ul style='list-style=none;'>
        {{#each errors}}
        <li class='text-danger'>{{{msg}}}</li>
        {{/each}}
    </ul>

    <ul style='list-style=none;'>
        {{#each hint}}
        <li class='text-danger'>{{{this}}}</li>
        {{/each}}
    </ul>
    {{/if}}
</div>